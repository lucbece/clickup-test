{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "allowJs": true,
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "useUnknownInCatchVariables": false, // override strict's default
    },
    "include": [
      "src/**/*.ts"
    ],
  }
  